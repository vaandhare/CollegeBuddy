<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".STLogin"
    tools:showIn="@layout/activity_stlogin"
    android:background="@color/faint_green">

    <android.support.v7.widget.CardView
        android:id="@+id/Login_to_std"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        app:cardBackgroundColor="@color/new_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:src="@drawable/student_login_png" />

            <TextView
                android:id="@+id/LTS_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Student"
                android:textColor="@color/White"
                android:textSize="30sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/Login_to_teacher"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/new_blue"
        android:layout_below="@id/Login_to_std">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/teacher_login_png"/>

            <TextView
                android:id="@+id/LTT_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/White"
                android:text="Teacher"
                android:textSize="30sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/Private_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_alignParentBottom="true"
        android:text="@string/privacy_policy"
        android:textSize="17dp"
        android:textColor="@color/new_blue"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/TermsAndCondn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/Private_policy"
        android:text="@string/terms_and_conditions"
        android:textSize="17dp"
        android:textColor="@color/new_blue"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/Policies"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       android:layout_above="@id/Private_policy"
        android:gravity="center"
        android:text="If you using this application means you'r accepting our Privacy Policy and Terms and Conditions"/>

</RelativeLayout>