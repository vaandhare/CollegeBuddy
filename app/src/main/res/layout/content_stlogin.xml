<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".STLogin"
    tools:showIn="@layout/activity_stlogin"
    android:background="@drawable/st_bg">

    <Button
        android:id="@+id/Login_to_std"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Student"
        android:textSize="50sp"
        android:fontFamily="@font/sensible"
        android:textColor="#fff" />

    <Button
        android:id="@+id/Login_to_teacher"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/Login_to_std"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="Teacher"
        android:fontFamily="@font/sensible"
        android:textSize="50sp"
        android:textColor="#fff" />


</RelativeLayout>