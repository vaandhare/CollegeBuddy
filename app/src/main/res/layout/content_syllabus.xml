<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SyllabusActivity"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_semester1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester 1"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"/>

            <ExpandableListView
                android:id="@+id/elv"
                android:layout_below="@id/tv_semester1"
                android:layout_marginTop="10dp"
                android:paddingStart="@dimen/tendp"
                android:paddingEnd="@dimen/tendp"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </ExpandableListView>

            <TextView
                android:id="@+id/tv_semester2"
                android:layout_below="@id/elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester 2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <ExpandableListView
                android:id="@+id/elv2"
                android:layout_below="@id/tv_semester2"
                android:layout_marginTop="10dp"
                android:paddingStart="@dimen/tendp"
                android:paddingEnd="@dimen/tendp"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </ExpandableListView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>