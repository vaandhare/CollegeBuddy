<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SyllabusActivity"
    android:background="@color/faint_green">

    <TextView
        android:id="@+id/tv_semester1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select you branch and year"
        android:fontFamily="@font/faitorough"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/new_blue"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <ExpandableListView
        android:id="@+id/elv"
        android:layout_below="@id/tv_semester1"
        android:layout_marginTop="10dp"
        android:padding="@dimen/tendp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:dividerHeight="8dp"
        android:layout_width="match_parent"
        android:layout_height="550dp">

    </ExpandableListView>

</RelativeLayout>