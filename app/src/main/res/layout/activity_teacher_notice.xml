<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:text="Enter the following information to send notice."
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="SUBJECT"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et2"
        android:hint="MESSAGE"
        android:layout_below="@+id/et1"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:id="@+id/AddNot"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/et2"
        android:text="ADD NOTICE"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="@color/colorAccent" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:id="@+id/AddImg"
        android:text="ADD IMAGE"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_toRightOf="@+id/AddNot"
        android:layout_below="@+id/et2" />

    <Button
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:id="@+id/ModNot"
        android:text="MODIFY NOTICES"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_below="@+id/AddNot"
        android:background="@color/colorAccent" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/ModNot"/>

</RelativeLayout>