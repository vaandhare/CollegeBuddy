<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginTeacherActivity"
    android:background="@drawable/b_g">

    <TextView
        android:id="@+id/t_dep_sel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:text="@string/department"
        android:textSize="25dp"
        android:paddingStart="15dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent" />

    <Spinner
        android:id="@+id/s_dept"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/t_dep_sel"
        android:paddingStart="10dp"
        android:layout_marginTop="@dimen/tendp"/>

    <TextView
        android:id="@+id/t_teacher_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Teacher Name"
        android:textSize="25dp"
        android:paddingStart="10dp"
        android:layout_below="@+id/s_dept"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent" />

    <Spinner
        android:id="@+id/s_teacher"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/t_teacher_name"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/et_t_pass"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:hint="@string/enter_password"
        android:layout_below="@+id/s_teacher"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        tools:ignore="Autofill"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/White"/>

    <Button
        android:id="@+id/t_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/Login"
        android:layout_below="@+id/et_t_pass"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_btns"
        android:textColor="#fff"
        android:textSize="30dp"
        android:fontFamily="@font/faitorough"/>
</RelativeLayout>