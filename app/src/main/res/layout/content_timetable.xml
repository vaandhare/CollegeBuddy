<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimetableActivity">


    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/cb2"
        android:layout_alignStart="@+id/cb2"/>

    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/cb3"
        android:layout_alignStart="@+id/cb3" />

    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/cb4"
        android:layout_alignStart="@+id/cb4" />

    <CheckBox
        android:id="@+id/cb4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/cb5"
        android:layout_alignStart="@+id/cb5" />

    <CheckBox
        android:id="@+id/cb5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/cb6"
        android:layout_alignStart="@+id/cb6" />

    <CheckBox
        android:id="@+id/cb6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="113dp"
        android:layout_toLeftOf="@id/iv1"
        android:layout_toStartOf="@+id/iv1" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/tt2" />

    <TextClock
        android:id="@+id/tc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:format12Hour="hh:mm:ss a"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="45dp"
        android:textStyle="bold" />

</RelativeLayout>