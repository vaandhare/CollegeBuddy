<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NoticeActivity"
    android:background="@color/faint_green">

    <android.support.v7.widget.CardView
        android:id="@+id/card_11"
        android:layout_width="330dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/new_blue"
        android:background="@drawable/shadow_bg">

        <TextView
            android:id="@+id/txt_push_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="20dp" />

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/new_blue"
        android:text="Notice will be shown on above board."
        android:layout_below="@id/card_11"
        android:gravity="center_horizontal"
        android:fontFamily="monospace"/>

</RelativeLayout>