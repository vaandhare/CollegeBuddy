<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_g">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:text="Created by:"
                android:gravity="left"
                android:textSize="25dp"
                android:textColor="@color/White"
                android:fontFamily="@font/faitorough"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Vaibhav Andhare"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/faitorough"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Rohan Atale"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:fontFamily="@font/faitorough"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Ajinkya Bhujbal"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/faitorough"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Sneha Amin"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="30dp"
                android:fontFamily="@font/faitorough"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="(indeKode team)"
                android:textColor="@color/White"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/faitorough"/>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                android:layout_marginTop="50dp"
                ads:adUnitId="ca-app-pub-3523952097375361/7665952127">
            </com.google.android.gms.ads.AdView>


        </LinearLayout>

</RelativeLayout>